{
    "configurations": [
        {
            "name": "Python Debugger: Remote Attach",
            "type": "debugpy",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 5678
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}/src",
                    "remoteRoot": "/app"
                },
                {
                    "localRoot": "~/.pyenv/versions/3.14.1/envs/dso/lib/python3.14/site-packages/",
                    "remoteRoot": "/usr/local/lib/python3.14/site-packages"
                }
            ]
        }
    ]
}
